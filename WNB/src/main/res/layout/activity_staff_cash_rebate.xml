<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.chanxa.wnb.activity.MemberDataActivity">

    <include layout="@layout/default_title_layout" />

    <ScrollView
        android:layout_below="@+id/container_memberDataTitle"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/bg_edit"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="50dp">

                <TextView
                    android:text="金额(元)"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/edit_memberMoney"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint="请输入"
                    android:textColor="#9d9d9d"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:background="@drawable/bg_edit"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="50dp">

                <TextView
                    android:text="密码"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edit_memberPwd"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="请输入"
                    android:textColor="#9d9d9d"
                    android:layout_height="wrap_content" />
            </LinearLayout>

