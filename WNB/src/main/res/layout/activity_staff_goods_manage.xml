<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="com.chanxa.wnb.activity.staff.StaffGoodsManageActivity">

    <RelativeLayout
        android:id="@+id/container_goodsManage_title"
        android:layout_width="match_parent"
        android:background="@drawable/bg_navi"
        android:layout_height="@dimen/titleHeight">

        <Button
            android:id="@+id/btn_title_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_back"
            android:text="返回"
            android:layout_width="50dp"
            android:gravity="right|center"
            android:paddingRight="10dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="商品管理"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listview_goodsManage"
        android:layout_below="@+id/container_goodsManage_title"
        android:layout_above="@+id/container_addGoods"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/container_addGoods"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
       <!-- <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/goods_manage_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
        <TextView
            android:background="#b1a999"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:drawableLeft="@drawable/goods_manage_add"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:text="添加"
            android:textColor="#ff4747"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
