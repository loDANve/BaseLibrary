<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <TextView
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_item_look_record"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:id="@+id/linearLayout">
            <TextView
                android:id="@+id/tv_lookRecordDay"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:text="3日"
                android:textColor="#858585"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_lookRecordTime"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="11:00"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="#858585"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_line11"
            android:layout_width="1dp"
            android:background="#b8b8b8"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />
        <TextView
            android:layout_toRightOf="@+id/tv_line11"
            android:id="@+id/tv_lookRecordType"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="支出"
            android:maxLength="4"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lookRecordMoney"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_light"
            android:text="-100.00"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>