<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.chanxa.wnb.activity.MemberShortMessageVerificationActivity">
    <include layout="@layout/default_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/edit_verCheckCode"
            android:textSize="16sp"
            android:hint="请输入验证码"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:background="@drawable/bg_edit"
            android:layout_centerVertical="true"
            android:layout_width="150sp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_doRequestGetbackPwdCheckCode"
            android:textColor="@android:color/white"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_btn_shortmsg"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/bg_edit"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/edit_setPwd1"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_edit"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/edit_setPwd2"
            android:hint="再次输入密码"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:layout_weight="5"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_doSetPwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="确认"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_reg"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

</LinearLayout>
