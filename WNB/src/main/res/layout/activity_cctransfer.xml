<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.chanxa.wnb.activity.CCTransferActivity">

    <include
        android:id="@+id/ccTransferTitle"
        layout="@layout/default_title_layout" />


    <LinearLayout
        android:id="@+id/container_ccName"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ccTransferTitle"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_edit"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_ccname"
            android:text="姓名"
            android:gravity="center"
            android:drawablePadding="20dp"
            android:textColor="#3e3e3e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_ccName"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:singleLine="true"
            android:hint="收款人姓名"
            android:textSize="14sp"
            android:textColor="#9d9d9d"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_ccNumber"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/container_ccName"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_edit"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_ccnumber"
            android:text="卡号"
            android:gravity="center"
            android:textColor="#3e3e3e"
            android:drawablePadding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_ccNumber"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:singleLine="true"
            android:hint="收款人卡号"
            android:textSize="14sp"
            android:textColor="#9d9d9d"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_ccMoney"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/container_ccNumber"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_edit"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_ccmoney"
            android:text="金额"
            android:gravity="center"
            android:drawablePadding="20dp"
            android:layout_width="wrap_content"
            android:textColor="#3e3e3e"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_ccMoney"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:singleLine="true"
            android:hint="(请输入转账金额)"
            android:textSize="14sp"
            android:inputType="number"
            android:textColor="#9d9d9d"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_ccPwd"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/container_ccMoney"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_edit"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_ccpwd"
            android:text="密码"
            android:gravity="center"
            android:drawablePadding="20dp"
            android:textColor="#3e3e3e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_ccPwd"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:singleLine="true"
            android:hint="(请输入消费密码)"
            android:inputType="textPassword"
            android:textColor="#9d9d9d"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_ok"
        android:layout_below="@+id/container_ccPwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="确认"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_reg"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

</RelativeLayout>
