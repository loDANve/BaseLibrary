<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <TextView
            android:text="姓名"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edit_MakeDetailsDialogName"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:background="@drawable/clear_edit"
            android:id="@+id/btn_clear_name"
            android:layout_marginLeft="-40dp"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_height="30dp" />

    </LinearLayout>

    <TextView
        android:background="#dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <TextView
            android:text="电话"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edit_MakeDetailsDialogPhone"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:background="@drawable/clear_edit"
            android:id="@+id/btn_clear_phone"
            android:layout_marginLeft="-40dp"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_height="30dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e9e9e9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dataSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_btn"
            android:text="确定"
            android:textColor="#1c31f6" />

        <TextView
            android:layout_width="1dp"
            android:background="#dcdcdc"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_dataCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_btn"
            android:text="取消"
            android:textColor="#1c31f6" />
    </LinearLayout>
</LinearLayout>